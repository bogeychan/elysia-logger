{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ESNext"
        ],
        "module": "ES2022",
        "moduleResolution": "node",
        "types": [
            "bun-types"
        ],
        "declaration": true,
        "outDir": "./dist",
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*"
    ]
}